<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/msgShare"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="VocÃª compartilhou uma poesia"
        android:focusable="false" />
    
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/barra_poesia"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="10dp">
 
        <TextView
           android:id="@+id/lblListHeader"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_row="0"
           android:layout_column="0"
           android:layout_gravity="fill_horizontal"
           android:ellipsize="end"
           android:lines="1"
           android:maxLines="5"
           android:scrollHorizontally="false"
           android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
           android:textColor="#927e58"
           android:textSize="17dp"
           android:focusable="false"  />
        
        <TextView
           android:id="@+id/author"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_row="1"
           android:layout_column="0" 
           android:layout_gravity="fill_horizontal"
           android:ellipsize="end"
           android:lines="1"
           android:maxLines="5"
           android:scrollHorizontally="false"
           android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
           android:textColor="#927e58"
           android:textSize="16sp"
           android:paddingBottom="10dp"
		   android:clickable="true"
		   android:focusable="false" />
        
        <ImageView
            android:id="@+id/commentIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/comment"
            android:focusable="false"  />

        <ImageView
            android:id="@+id/facebookIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/like_icon"
            android:focusable="false" />

        <TextView
            android:id="@+id/num_comments"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#a1967c"
            android:textSize="22sp"
            android:focusable="false"  />

        <TextView
            android:id="@+id/num_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:textColor="#a1967c"
            android:textSize="22sp"
            android:focusable="false"  />
		
		<ImageView
            android:id="@+id/edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:alpha="0.4"
            android:src="@drawable/ic_edit_black_48dp"
            android:focusable="false"  />
		
		<ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:alpha="0.4"
            android:src="@drawable/ic_clear_black_48dp"
            android:focusable="false"  />
		
    </GridLayout>
 
</LinearLayout>