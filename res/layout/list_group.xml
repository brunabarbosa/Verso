<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/barra_poesia"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="10dp" >

        <TextView
           android:id="@+id/lblListHeader"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="0"
           android:layout_column="0"
           android:layout_gravity="fill_horizontal"
           android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
           android:textColor="#927e58"
           android:textSize="17dp" />
        
        <TextView
           android:id="@+id/author"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_row="1"
           android:layout_column="0" 
           android:layout_gravity="fill_horizontal"
           android:ellipsize="end"
           android:lines="1"
           android:maxLines="1"
           android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
           android:scrollHorizontally="true"
           android:singleLine="true"
           android:text="author"
           android:textColor="#927e58"
           android:textSize="16sp"
           android:paddingBottom="10dp"
		   android:clickable="true"/>
        
        <ImageView
            android:id="@+id/commentIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/comment" />

        <ImageView
            android:id="@+id/facebookIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/like_icon"/>

        <TextView
            android:id="@+id/num_comments"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textColor="#a1967c"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/num_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:text="0"
            android:textColor="#a1967c"
            android:textSize="22sp" />
		
		<ImageView
            android:id="@+id/edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:alpha="0.4"
            android:src="@drawable/ic_edit_black_48dp" />
		
		<ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:alpha="0.4"
            android:src="@drawable/ic_clear_black_48dp" />
		
    </GridLayout>
 
</LinearLayout>