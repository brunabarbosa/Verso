<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    	android:padding="10dp"  >

       <LinearLayout
            android:id="@+id/buscaPoesia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/buscaPoemaTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TÃ­tulo da poesia"
                android:inputType="textCapWords"
                android:background="@drawable/white"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:textColorHint="#382508" />
            
            <EditText
                android:id="@+id/buscaAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Autor"
                android:background="@drawable/white"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_margin="5dp"
                android:textColorHint="#382508" />

            <EditText
                android:id="@+id/buscaTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tag"
                android:background="@drawable/white"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_margin="5dp"
                android:textColorHint="#382508" />

	        <EditText
	            android:id="@+id/buscaTrecho"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:hint="Trecho da poesia"
	            android:background="@drawable/white"
	            android:padding="10dp"
	            android:layout_margin="5dp"
	            android:textColorHint="#382508" />
	        
	        <Button 
		       android:layout_below="@+id/buscaTrecho"
		       android:id="@+id/btnBuscaPoesia"
		       android:layout_width="150dp"
		       android:layout_height="50dp"
		       android:layout_margin="2dp"
		       android:layout_marginTop="15dp"
		       android:layout_centerHorizontal="true"
		 	   android:paddingLeft="30dp"
		       android:background="@drawable/cadastrar"
		       android:layout_gravity="center_horizontal"
		       android:text="Pesquisar" />
			        
        </LinearLayout>
        
    </ScrollView>

</RelativeLayout>